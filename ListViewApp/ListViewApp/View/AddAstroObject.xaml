<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewApp.View.AddAstroObject"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Název" HorizontalTextAlignment="Center" Text="{Binding Name}" PlaceholderColor="White" TextColor="White"/>
            <Entry Placeholder="Typ" HorizontalTextAlignment="Center" Text="{Binding Type}" PlaceholderColor="White" TextColor="White" />
            <Entry Placeholder="Popis" HorizontalTextAlignment="Center" Text="{Binding Description}" PlaceholderColor="White" TextColor="White" />
            <Button Text="Uložit" HorizontalOptions="Center" VerticalOptions="End" Clicked="Save_Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>